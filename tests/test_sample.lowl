// Test sample program to demonstrate Lowland language features

// Variable declarations require type annotations
let x: int = 10;
let y: int = 5;
let result: int = x + y;

// Print the result
println("The result of adding", x, "and", y, "is", result);

// Mutable variables
let& counter: int = 0;
counter = counter + 1;
println("Counter is now:", counter);

// String variables
let message: string = "Hello, Lowland!";
println(message);

// Boolean variables and conditions
let is_valid: bool = true;
if (is_valid) {
    println("The condition is true!");
} else {
    println("The condition is false!");
}

// List example
let& numbers: list<int> = [1, 2, 3, 4, 5];
numbers.push(6);
println("List length:", numbers.len());
println("List contents:", numbers);

// Object example
let person: obj = {
    name: "John",
    age: 30
};
println("Person:", person); 